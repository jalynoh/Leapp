<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFACD"
    tools:context="com.example.zaimzanaruddin.derplist.Filter">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="146dp"
        android:layout_height="66dp"
        android:text="Filter"
        android:textSize="50dp"
        android:gravity="center"
        android:fontFamily="cursive"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintVertical_bias="0.018" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="286dp"
        android:layout_height="50dp"
        android:text="Most Votes To Least Votes"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintVertical_bias="0.227"
        tools:layout_editor_absoluteX="27dp" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="284dp"
        android:layout_height="38dp"
        android:text="Least Votes to Most Votes"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.277"
        app:layout_constraintVertical_bias="0.354"
        tools:layout_editor_absoluteX="33dp" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="285dp"
        android:layout_height="42dp"
        android:text="Alphabetically"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintVertical_bias="0.476" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="288dp"
        android:layout_height="41dp"
        android:text="Morning-Afternoon Events"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintVertical_bias="0.614" />

    <Switch
        android:id="@+id/switch5"
        android:layout_width="287dp"
        android:layout_height="41dp"
        android:text="Afternoon-Midnight Events"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.308"
        app:layout_constraintVertical_bias="0.746" />

    <Button
        android:id="@+id/BTN_Refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        app:layout_constraintRight_toLeftOf="@+id/BTN_GoBack"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.326"
        app:layout_constraintVertical_bias="0.917" />

    <Button
        android:id="@+id/BTN_GoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:layout_marginRight="65dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.917" />

</android.support.constraint.ConstraintLayout>
