<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zaimzanaruddin.derplist.ui.EventPage">

    <ImageView
        android:id="@+id/im_event_icon"
        android:layout_width="402dp"
        android:layout_height="195dp"
        app:srcCompat="@drawable/ic_event_black_36dp"
        android:background="#F16664"
        android:padding="36dp"
        android:tint="#FFFFFF"
        tools:layout_editor_absoluteX="-8dp"
        tools:layout_editor_absoluteY="-3dp" />

    <TextView
        android:id="@+id/lbl_event_title"
        android:layout_width="366dp"
        android:layout_height="44dp"
        android:text="Event Title Location"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:layout_editor_absoluteY="199dp"
        android:layout_marginLeft="9dp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <View
        android:layout_width="368dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#D3D3D3"
        tools:layout_editor_absoluteY="244dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/view3" />



    <TextView
        android:id="@+id/im_description"
        android:layout_width="319dp"
        android:layout_height="81dp"
        android:text="Description: This is where all the description will go so people can read about the event"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="262dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/ic_description_black_24dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="262dp" />

    <View
        android:layout_width="368dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#D3D3D3"
        tools:layout_editor_absoluteY="425dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/view2" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="62dp"
        android:layout_height="58dp"
        app:srcCompat="@drawable/ic_location_on_black_24dp"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="352dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="48dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_access_time_black_24dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="435dp" />


    <View
        android:layout_width="368dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#D3D3D3"
        tools:layout_editor_absoluteY="343dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/view1" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="308dp"
        android:layout_height="60dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="352dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="320dp"
        android:layout_height="59dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="436dp" />


</android.support.constraint.ConstraintLayout>
