<?xml version="1.0" encoding="utf-8"?>



<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zaimzanaruddin.derplist.ui.DetailActivity">

    <ImageView
        android:id="@+id/im_event_icon"
        android:layout_width="402dp"
        android:layout_height="195dp"
        android:background="#F16664"
        android:scaleType="fitXY"
        tools:layout_editor_absoluteX="-8dp"
        tools:layout_editor_absoluteY="-3dp" />

    <TextView
        android:id="@+id/lbl_quote_title"
        android:layout_width="366dp"
        android:layout_height="44dp"
        android:text="Event Title Location"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/im_event_icon"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/lbl_quote_description"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:layout_width="368dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#D3D3D3"
        tools:layout_editor_absoluteY="254dp"
        android:id="@+id/view3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />



    <TextView
        android:id="@+id/lbl_quote_description"
        android:layout_width="278dp"
        android:layout_height="72dp"
        android:text="Description: This is where all the description will go so people can read about the event"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintBottom_toTopOf="@+id/view1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/ic_description_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.575" />

    <View
        android:layout_width="368dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#D3D3D3"
        android:id="@+id/view2"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/lbl_quote_time"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lbl_quote_loc"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="62dp"
        android:layout_height="58dp"
        app:srcCompat="@drawable/ic_location_on_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.787" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="48dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_access_time_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />


    <View
        android:layout_width="368dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#D3D3D3"
        tools:layout_editor_absoluteY="342dp"
        android:id="@+id/view1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />


    <TextView
        android:id="@+id/lbl_quote_time"
        android:layout_width="308dp"
        android:layout_height="60dp"
        android:text="TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lbl_quote_loc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/lbl_quote_loc"
        android:layout_width="281dp"
        android:layout_height="60dp"
        android:text="TextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageView4"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.47"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/view1" />


</android.support.constraint.ConstraintLayout>
